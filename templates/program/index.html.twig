{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
<div class="container-fluid" id="program-index">
    <h1 class="d-flex justify-content-center " >Tous les programmes</h1>

    <table class="table table-bordered">
        <thead class="thead-jaune">
            <tr>
                <th>Poster</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Country</th>
                <th>Year</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody >
        {% for program in programs %}
            <tr >
                <td><img src="{{ program.poster }}" width="200px"></td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td class="align-middle" width="8%">{{ program.country }}</td>
                <td class="align-middle" width="6%">{{ program.year }}</td>
                <td class="btn-actions align-middle">
                    <a class="btn btn-bleuf align-middle" href="{{ path('program_show', {'id': program.id}) }}">Voir +</a>
                    <a class="btn btn-jaune align-middle" href="{{ path('program_edit', {'id': program.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-jaune" href="{{ path('program_new') }}">Ajouter un programme</a>
</div>
{% endblock %}
