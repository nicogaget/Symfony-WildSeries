{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
<div class="container-fluid" id="program-index">
    <h1 class="d-flex justify-content-center " >Toutes les Séries</h1>

    <div class="container-fluid m-3">
        <a class="btn btn-bleuf" href="{{ path('program_new') }}">Ajouter une Série</a>
    </div>

    <table class="table table-bordered">
        <thead class="bleuf">
            <tr>
                <th>Affiche</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Pays</th>
                <th>Année</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody >
        {% for program in programs %}
            <tr >
                <td class="bleuc"><img src="{{ program.poster }}" width="200px"></td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td class="align-middle bleuc " width="8%">{{ program.country }}</td>
                <td class="align-middle " width="6%">{{ program.year }}</td>
                <td class="btn-actions align-middle bleuc">
                    <a class="btn btn-bleuf align-middle" href="{{ path('program_show', {'slug': program.slug}) }}">Voir +</a>
                    {% if is_granted("ROLE_ADMIN") %}
                    <a class="btn btn-jaune align-middle" href="{{ path('program_edit', {'slug': program.slug}) }}">Editer</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-bleuf" href="{{ path('program_new') }}">Ajouter une Série</a>
</div>
{% endblock %}
