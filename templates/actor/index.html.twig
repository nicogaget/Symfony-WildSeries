{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
<div class="container-fluid " id="actor-index">
    <h1 class="d-flex justify-content-center m-5 " >Toutes les Acteurs</h1>
    <div class="container-fluid m-3">
        <a class="btn btn-bleuf" href="{{ path('actor_new') }}">Ajouter un Acteur</a>
    </div>
    <table class="table table-bordered table-index table-index-small ">
        <thead class="bleuf">
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.name }}</td>
                <td>
                    <a class="btn btn-bleuc" href="{{ path('actor_show', {'slug': actor.slug}) }}">Voir +</a>
                    <a class="btn btn-bleuf" href="{{ path('actor_edit', {'slug': actor.slug}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">Create new</a>
</div>
{% endblock %}
