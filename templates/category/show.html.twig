{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<h1 class="d-flex justify-content-around m-5">Edition d'une catégory</h1>
    <div class="container-fluid show" >
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="d-flex justify-content-center">Nom de la categorie</th>
                    <td class="d-flex justify-content-center">{{ category.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="program-footer d-flex justify-content-around">
            <a class="btn btn-bleuc" href="{{ path('category_index') }}">Retour à la list</a>

            <a class="btn btn-bleuf" href="{{ path('category_edit', {'id': category.id}) }}">Edition</a>

            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>


{% endblock %}
