{% extends 'base.html.twig' %}

{% block title %}Index des épisodes{% endblock %}

{% block body %}
    <div class="container-fluid">
    <h1 class="d-flex justify-content-center m-4">Index des épisodes</h1>
        <a class="btn btn-bleuf m-3" href="{{ path('episode_new') }}">Ajouter un épisode</a>
    <table class="table table-bordered table-index">
        <thead>
            <tr>
                <th>Titre</th>
                <th> N°</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.title }}</td>
                <td class="bleuc">{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="btn btn-bleuc" href="{{ path('episode_show', {'slug': episode.slug}) }}">Voir +</a>
                    {% if is_granted("ROLE_ADMIN") %}
                    <a class="btn btn-bleuf" href="{{ path('episode_edit', {'slug': episode.slug}) }}">Edition</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-bleuf" href="{{ path('episode_new') }}">Ajouter un épisode</a>
    </div>
{% endblock %}
